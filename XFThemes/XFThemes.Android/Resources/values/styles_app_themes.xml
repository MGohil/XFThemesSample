<?xml version="1.0" encoding="utf-8" ?>
<resources>
  
  <!--When you introduce a new theme in Core project's ThemeResources folder. Also create similar copy for android specific styling as below for that theme-->
  
  <style name="blueAppTheme" parent="MainBaseTheme">
    <item name="toolbarStyle">@style/blueThemeToolbarStyle</item>
    <item name="toolbarPopupStyle">@style/lightToolbarPopupTheme</item>
    <item name="colorPrimaryDark">#090030</item>
    <item name="android:windowLightStatusBar">false</item>
  </style>

  <style name="darkAppTheme" parent="MainBaseTheme">
    <item name="toolbarStyle">@style/darkThemeToolbarStyle</item>
    <item name="toolbarPopupStyle">@style/darkToolbarPopupTheme</item>
    <item name="colorPrimaryDark">#b70042</item>
    <item name="android:windowLightStatusBar">false</item>
  </style>

  <style name="lightAppTheme" parent="MainBaseTheme">
    <item name="toolbarStyle">@style/lightThemeToolbarStyle</item>
    <item name="toolbarPopupStyle">@style/lightToolbarPopupTheme</item>
    <item name="colorPrimaryDark">#22a009</item>
    <item name="android:windowLightStatusBar">false</item>
  </style>

  <style name="orangeAppTheme" parent="MainBaseTheme">
    <item name="toolbarStyle">@style/orangeThemeToolbarStyle</item>
    <item name="toolbarPopupStyle">@style/darkToolbarPopupTheme</item>
    <item name="colorPrimaryDark">#c63500</item>
    <item name="android:windowLightStatusBar">false</item>
  </style>

  <style name="whiteAppTheme" parent="MainBaseTheme">
    <item name="toolbarStyle">@style/whiteThemeToolbarStyle</item>
    <item name="toolbarPopupStyle">@style/lightToolbarPopupTheme</item>
    <item name="colorPrimaryDark">#d2d2d2</item>
    <item name="android:windowLightStatusBar">true</item>
  </style>
</resources>